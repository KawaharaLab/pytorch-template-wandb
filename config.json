{
    "name": "TongueResNet",
    "n_gpu": 1,
    "use_wandb": true,
    "arch": {
      "type": "TongueGestureModel",
      "args": {}
    },
    "data_loader": {
      "type": "TongueDataLoader",
      "args":{
        "data_dir": "tongue_dataset/",
        "batch_size": 128,
        "shuffle": true,
        "validation_split": 0.1,
        "num_workers": 2,
        "frame_width": 4096,
        "sample_rate": 48000
      }
    },
    "optimizer": {
      "type": "Adam",
      "args":{
        "lr": 0.001,
        "weight_decay": 0,
        "amsgrad": true
      }
    },
    "loss": "cross_entropy",
    "metrics": [
      "accuracy"
    ],
    "lr_scheduler": {
      "type": "StepLR",
      "args": {
        "step_size": 50,
        "gamma": 0.1
      }
    },
    "trainer": {
      "epochs": 100,
      "save_dir": "saved/",
      "save_period": 1,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 10,
      "tensorboard": true
    }
  }